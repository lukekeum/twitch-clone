{
  "name": "main-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/index.ts | pino-pretty",
    "test": "NODE_ENV=test node -r tsconfig-paths/register scripts/setupTests.js"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "fastify": "^3.27.1",
    "fastify-cors": "^6.0.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
      "@src/(.*)$": "<rootDir>/src/$1",
      "@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "setupFilesAfterEnv": ["<rootDir>/src/utils/tests/setup.ts"]
  }
}
